{
  "name": "@saastral/infrastructure",
  "version": "0.1.0",
  "description": "SaaStral Infrastructure - Implementation layer with framework integrations",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prisma:generate": "prisma generate --schema=./src/database/prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema=./src/database/prisma/schema.prisma",
    "prisma:studio": "prisma studio --schema=./src/database/prisma/schema.prisma",
    "prisma:seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "@saastral/core": "workspace:*",
    "@trpc/server": "11.8.1",
    "dotenv": "^16.3.1",
    "graphile-worker": "^0.16.4",
    "pg": "^8.13.1",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/node": "^20.10.6",
    "@types/pg": "^8.11.10",
    "bcrypt": "^6.0.0",
    "prisma": "^7.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.1"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
